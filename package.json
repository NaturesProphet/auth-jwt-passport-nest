{
  "name": "autenticacao-jwt-passport-top",
  "version": "0.2.0",
  "description": "Sistema base em Nest pronto e pré-configurado para começar projetos incríveis de backend com autenticação profissional!",
  "author": "Mateus Garcia",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "concurrently --handle-input \"wait-on dist/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest --coverage",
    "clear": "rm -R node_modules",
    "clear:all": "rm -R node_modules dist coverage",
    "postgre:persistent": "docker run --name postgre-srv -p 5432:5432 -e POSTGRES_USER=admin -e POSTGRES_PASSWORD=123 -e POSTGRES_DB=novosistema -v /DOCKER-VOLUMES/novosistema/postgre-data:/var/lib/postgresql -v /DOCKER-VOLUMES/novosistema/postgre-data/data:/var/lib/postgresql/data -d postgres:alpine",
    "postgre:test": "docker run --name postgre-srv -p 5432:5432 -e POSTGRES_USER=admin -e POSTGRES_PASSWORD=123 -e POSTGRES_DB=novosistema -d postgres:alpine",
    "stop:all": "docker stop $(docker ps -q -a) && docker rm $(docker ps -q -a)",
    "stop:postgre": "docker stop postgre-srv && docker rm postgre-srv",
    "commit": "git-cz",
    "commitmsg": "validate-commit-msg",
    "release": "standard-version"
  },
  "dependencies": {
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-express": "^6.0.0",
    "@nestjs/swagger": "^3.1.0",
    "@nestjs/typeorm": "^6.1.3",
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.0.0",
    "email-validator": "^2.0.4",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^7.11.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "swagger-ui-express": "^4.0.7",
    "typeorm": "^0.2.18"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/dotenv": "^6.1.1",
    "@types/email-validator": "^1.0.6",
    "@nestjs/testing": "^6.0.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.18",
    "@types/supertest": "^2.0.7",
    "commitizen": "^4.0.3",
    "concurrently": "^4.1.0",
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^3.0.1",
    "jest": "^24.8.0",
    "jest-cucumber": "^2.0.11",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "standard-version": "^6.0.1",
    "supertest": "^3.4.1",
    "ts-jest": "24.0.2",
    "ts-node": "8.1.0",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.16.0",
    "typescript": "3.4.3",
    "validate-commit-msg": "^2.14.0",
    "wait-on": "^3.2.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{service.ts,controller.ts}",
      "!**/node_modules/**"
    ],
    "verbose": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "validate-commit-msg"
    }
  }
}
